{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 활성 파일 빌드",
            "command": "/usr/bin/gcc",
            "args": [
                "-Wall -Wextra -Werror -Imlx",
                "-g",
                "-L ./resources/minilibx_opengl_20191021/libmlx.a -lmlx -framework OpenGL -framework AppKit",
                "main.c",
                "libft/*.c",
                "so_long/*.c",
                "-o",
                "so_long"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "디버거에서 생성된 작업입니다."
        }
    ],
    "version": "2.0.0"
}