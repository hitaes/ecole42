{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 활성 파일 빌드",
            "command": "/usr/bin/gcc",
            "args": [
				"-Wall -Wextra -Werror", 
				"-g",
				// "main.c", "node_setter/*.c", "validators/*.c", "libft/*.c", "utils/*.c",
				"main.c", "utils/*.c", "libft/*.c", "parser/*.c",
				"-o",
				"push_swap" 
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "디버거에서 생성된 작업입니다."
        }
    ],
    "version": "2.0.0"
}

